# Example of .ssh/config (NOTE: ssh checks ownership and permissions of this file)
Host *
  # example of keeping pinging server (eg: Azure)
  ServerAliveInterval 20

Host 10.* 172.* 192.168.* *.localdomain node* localhost
  #ForwardAgent yes
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  User root
  # example of identity file path. $HOME didn't work
  #IdentityFile ~/.ssh/id_rsa
  # To not show "Warning: Permanently added ..." (is QUIET better?)
  LogLevel ERROR
